<view style='{{viewStyle}}' class="custom-class">
    <image class="image-class" style='{{viewStyle}}' wx:if='{{!isError}}' src="{{src}}" mode='{{mode}}' webp='{{webp}}' lazy-load='{{lazyLoad}}' show-menu-by-longpress='{{showMenuByLongpress}}' binderror='onError' bindload='onLoad' />
    <view style='{{viewStyle}}' class='error-class lin-image-error' wx:if='{{!useErrorSlot&&isError}}'>
        <text>{{errorTip?errorTip:'加载失败'}}</text>
    </view>
    <slot wx:if='{{useErrorSlot&&isError}}' />
</view>