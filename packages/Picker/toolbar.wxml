<template name="toolbar">
    <view class="toolbar-class lin-picker-toolbar" wx:if="{{showToolbar}}">
        <view bind:tap='onCancel' class="lin-picker-cancel">{{cancelButtonText}}</view>
        <view class="lin-picker-title" wx:if='{{title}}'>{{title}}</view>
        <view bind:tap='onConfirm' class="lin-picker-confirm">{{confirmButtonText}}</view>
    </view>
</template>