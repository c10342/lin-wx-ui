<lin-password-keyboard closeOnClickMask length='6' data-length="6" data-valueKey="inputValue2" data-show="show2" bind:close='onClose' bind:input='onInput' bind:del='onDelete' inputValue='{{inputValue2}}' show='{{show2}}' />
