
<view class='container'>
   <demo-block title='基础用法'>
            <lin-cell-group>
			<lin-cell title="4位数密码" data-show="show1" bind:click='onBtnClick' is-link />
			<lin-cell title="6位数密码" data-show="show2" bind:click='onBtnClick' is-link border="{{ false }}" />
