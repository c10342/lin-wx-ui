.index-bar-tabs {
  position: relative;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 0 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 100rpx;
  color: #323233;
  background-color: #fff;
}

.tab-item {
  position: relative;
}

.active-tab::after {
  position: absolute;
  bottom: 0;
  left: 50%;
  z-index: 1;
  width: 40px;
  height: 3px;
  content: '';
  background-color: #ee0a24;
  border-radius: 3px;
  transform: translateX(-50%);
}
