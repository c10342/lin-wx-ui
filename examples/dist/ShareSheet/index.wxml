<wxs src='./index.wxs' module='computed' />

<lin-popup
 round
 class='custom-class lin-share-sheet'
 show='{{show}}'
 position='bottom'
 mask='{{mask}}'
 duration='{{duration}}'
 z-index='{{zIndex}}'
 maskStyle='{{maskStyle}}'
 closeOnClickMask='{{closeOnClickMask}}'
 bind:close='onClose'
>

	<view class='lin-share-sheet-header'>
		<view class='lin-share-sheet-title'>
			<block wx:if="{{title}}">
				{{title}}
			</block>
			<slot name='title' wx:else />
		</view>

        <view class='lin-share-sheet-description'>
			<block wx:if="{{description}}">
				{{description}}
			</block>
			<slot name='description' wx:else />
		</view>

	</view>

    <block wx:if="{{computed.isMulti(options)}}">
    <options
      wx:for="{{ options }}"
      show-border="{{ index !== 0 }}"
      wx:key="index"
      options="{{ item }}"
      bind:select="onSelect"
    />
    </block>

    <options wx:else options="{{options}}" bind:select='onSelect'/>

    <view class='lin-share-sheet-cancel' bindtap="onCancel">
        {{cancelText}}
    </view>
</lin-popup>

