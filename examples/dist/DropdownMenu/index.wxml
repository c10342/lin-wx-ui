<wxs src="./index.wxs" module="computed"></wxs>
<view class='custom-class lin-dropdown-menu'>
    <view class='lin-dropdown-menu-bar-wrapper'>
        <view class="lin-dropdown-menu-bar-item" wx:for="{{itemListData}}" wx:key="index" data-index='{{index}}'>
            <view class="lin-dropdown-menu-title {{index==0?'lin-dropdown-menu-title-active':''}}">
                {{computed.displayTitle(item)}}
                <!-- <view class="lin-dropdown-menu-text">{{computed.displayTitle(item)}}</view> -->
            </view>
        </view>
    </view>
    <slot></slot>
</view>