{
  "name": "lin-wx-ui",
  "version": "1.2.0",
  "description": "微信小程序原生ui组件库",
  "author": "c10342",
  "private": false,
  "keywords": [
    "wechat",
    "UI",
    "Component"
  ],
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/c10342/lin-wx-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/c10342/lin-wx-ui"
  },
  "files": [
    "packages",
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "gulp -f build/index.js dev",
    "build": "gulp -f build/index.js build",
    "watch": "gulp -f build/index.js watch",
    "serve": "vue-cli-service serve",
    "build:docs": "vue-cli-service build",
    "upload:docs": "npm run build:docs && node ./build/qiniu.js",
    "create": "node ./build/create.js",
    "createComponent": "node ./build/createComponent.js",
    "lint": "eslint --ext .js packages",
    "lint-fix": "eslint --fix --ext .js packages",
    "lint:style": "stylelint **/*.{html,vue,css,sass,scss} --fix",
    "commit": "git cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{html,vue,css,sass,scss}": [
      "npm run lint:style"
    ],
    "*.{js,ts,vue}": [
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "build": {
          "description": "主要目的是修改项目构建系统(例如 glup，webpack，rollup 的配置等)的提交",
          "title": "build"
        },
        "ci": {
          "description": "主要目的是修改项目继续集成流程(例如 Travis，Jenkins，GitLab CI，Circle等)的提交",
          "title": "ci"
        },
        "docs": {
          "description": "文档更新",
          "title": "docs"
        },
        "feat": {
          "description": "新增功能",
          "title": "feat"
        },
        "fix": {
          "description": "bug 修复",
          "title": "fix"
        },
        "perf": {
          "description": "性能优化",
          "title": "perf"
        },
        "refactor": {
          "description": "重构代码(既没有新增功能，也没有修复 bug)",
          "title": "refactor"
        },
        "style": {
          "description": "不影响程序逻辑的代码修改(修改空白字符，补全缺失的分号等)",
          "title": "style"
        },
        "test": {
          "description": "文档更新",
          "title": "test"
        },
        "revert": {
          "description": "回滚某个更早之前的提交",
          "title": "revert"
        },
        "chore": {
          "description": "不属于以上类型的其他类型(日常事务)",
          "title": "chore"
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "cheerio": "^1.0.0-rc.3",
    "commitizen": "^4.2.2",
    "copy-webpack-plugin": "^6.0.3",
    "core-js": "^3.6.5",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^5.1.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-insert": "^0.5.0",
    "gulp-jsonminify": "^1.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-uglify-es": "^2.0.0",
    "highlight.js": "^10.2.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "markdown-it-container": "^3.0.0",
    "node-sass": "^4.14.1",
    "ora": "^5.1.0",
    "qiniu": "^7.3.2",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "vue": "^2.6.11",
    "vue-markdown-loader": "^2.4.1",
    "vue-router": "^3.2.0",
    "vue-template-compiler": "^2.6.11"
  }
}
