{
  "name": "lin-wx-ui",
  "version": "1.3.0",
  "description": "微信小程序原生ui组件库",
  "author": "c10342",
  "private": false,
  "keywords": [
    "wechat",
    "UI",
    "Component"
  ],
  "license": "MIT",
  "homepage": "https://github.com/c10342/lin-wx-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/c10342/lin-wx-ui"
  },
  "files": [
    "packages",
    "src",
    "dist"
  ],
  "miniprogram": "dist",
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp -f build/index.js dev",
    "build": "gulp -f build/index.js build",
    "watch": "cross-env NODE_ENV=development gulp -f build/index.js watch",
    "upload:docs": "npm run build:docs && node ./build/qiniu.js",
    "create": "node ./build/create.js",
    "createComponent": "node ./build/createComponent.js",
    "lint": "eslint --ext .js,.ts,.json ./",
    "lint-fix": "eslint --fix --ext .js,.ts,.json ./",
    "lint:style": "stylelint **/*.{css,sass,scss,wxss}",
    "lint:style-fix": "stylelint **/*.{css,sass,scss,wxss} --fix",
    "commit": "git cz",
    "pub": "node ./build/publish.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --verbose",
    "test-watch": "jest --watch",
    "codecov": "jest --coverage && codecov",
    "commitlint": "commitlint --config commitlint.config.js -e -V",
    "lint-staged": "lint-staged --config lint-staged.config.js",
    "prepare": "husky install",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/wechat-miniprogram": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vuepress/plugin-back-to-top": "^1.8.2",
    "@vuepress/plugin-pwa": "^1.8.2",
    "cheerio": "^1.0.0-rc.3",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^5.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-insert": "^0.5.0",
    "gulp-jsonminify": "^1.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulp-uglify-es": "^2.0.0",
    "husky": "^7.0.2",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "miniprogram-simulate": "^1.3.1",
    "node-sass": "^4.14.1",
    "ora": "^5.1.0",
    "prettier": "^2.2.1",
    "qiniu": "^7.3.2",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "semver": "^7.3.4",
    "shelljs": "^0.8.4",
    "stylelint": "^13.8.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.4.2",
    "vuepress": "^1.8.2"
  }
}
